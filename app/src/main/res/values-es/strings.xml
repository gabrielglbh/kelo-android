    <!-- Tutorial -->
    <string name="tutorial_1_title">TAREAS</string>
    <string name="tutorial_1_msg_1">Asignado</string>
    <string name="tutorial_1_msg_11">Usuario asignado a la tarea, capaz de completarla pero nada más.</string>
    <string name="tutorial_1_msg_2">Creador</string>
    <string name="tutorial_1_msg_22">Usuario que ha creado la tarea, capaz de completarla, borrarla y editarla.</string>
    <string name="tutorial_1_msg_3">Importancia</string>
    <string name="tutorial_1_msg_33">Puntos que recibe el asignado una vez completada la tarea.</string>

    <string name="tutorial_2_msg_1">Completar una Tarea</string>
    <string name="tutorial_2_msg_11">El administrador del grupo, el asignado y el creador pueden completar la tarea. Los puntos los recibirá siempre el asignado.</string>
    <string name="tutorial_2_msg_2">Eliminar una Tarea</string>
    <string name="tutorial_2_msg_22">Solo el administrador y el creador pueden eliminar una tarea de la lista.</string>

    <string name="tutorial_3_title">USUARIOS</string>
    <string name="tutorial_3_msg_1">Eliminar un Usuario</string>
    <string name="tutorial_3_msg_11">Solo el administrador del grupo puede eliminar un usuario del grupo. Todos los datos del usuario se perderán.</string>
    <string name="tutorial_3_msg_2">Añadir un Usuario</string>
    <string name="tutorial_3_msg_22">Cualquier usuario puede compartir el enlace y/o el código para que nuevas personas entren en el grupo.</string>

    <string name="tutorial_4_title">RECOMPENSAS</string>
    <string name="tutorial_4_msg_1">Administrar Recompensa</string>
    <string name="tutorial_4_msg_11">El administrador puede crear, editar o eliminar la recompensa del grupo. ¡Puede ser cualquier cosa!</string>
    <string name="tutorial_4_msg_2">Frecuencia de la Recompensa</string>
    <string name="tutorial_4_msg_22">La recompensa elegida se entregará al usuario con más puntos al final del periodo seleccionado. También se puede desactivar seleccionando "Sin frecuencia".</string>
